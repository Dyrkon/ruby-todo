<div class="TaskLists index">
  <h2>Task Lists</h2>

  <% if flash.alert.present? %>
    <p><%= flash.alert %></p>
  <% end %>

  <%= link_to("Add new task list", new_task_list_path, :class => 'action new') %>

  <table class="listing">
    <caption>Task list</caption>
    <tr class="header">
    </tr>
    <% @task_lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td class="actions">
          <%= link_to("Show", task_list_path(list.id), :class => 'action show') %>
          <%= link_to("Edit", edit_task_list_path(list), :class => 'action edit') %>
        </td>
        <td><%= button_to "Delete", task_list_path(list.id), method: :delete %></td>
      </tr>
    <% end %>
  </table>
</div>
