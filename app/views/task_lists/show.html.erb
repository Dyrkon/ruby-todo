<h1>Task list's detail</h1>

<table>
  <tr>
    <td>
      <%= link_to("<< Back to lists", task_lists_path, :class => 'back-link') %>
    </td>
    <td>
      <%= link_to('Edit list', edit_task_list_path(@task_list.id)) %>
    </td>
    <td>
      <%= link_to('Add task', add_task_path(@task_list.id)) %>
    </td>
  </tr>
</table>

<div class="list show">
  <table>
    <caption><h3>Task list</h3></caption>
    <% @tasks.each do |task| %>
      <tr>
      <tr>
        <td><b>Name: </b></td>
        <td><%= task.name %></td>
      </tr>
      <tr>
        <td><b>Description: </b></td>
        <td><%= task.description %></td>
      </tr>
      <tr>
        <td><b>Deadline: </b></td>
        <td><%= task.deadline.strftime('%d %B %Y') %></td>
      </tr>
      <tr>
        <td><%= link_to('Edit task', edit_task_path(task)) %></td>
        <td><td><%= button_to "Delete", task_path(task.id), method: :delete %></td></td>
      </tr>
      </tr>
    <% end %>
  </table>
</div>


