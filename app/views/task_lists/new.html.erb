<h1>New Task List</h1>

<%= link_to("<< Back to List", task_lists_path, :class => 'back-link') %>

<div class="task_list new">
  <h2>Create task list</h2>

  <%= form_for(@task_list, :url => task_lists_path, :method => 'post') do |f| %>
    <table>
      <caption>Create new task list</caption>
      <tr>
        <th>Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Task List") %>
    </div>
  <% end %>
</div>
