<h1>Sign up</h1>

<p><%= flash.alert %></p>

<%= form_for(@user, url: sign_up_path(@user)) do |f| %>
  <table>
    <tr>
      <th>Email</th>
      <td><%= f.text_field(:email) %></td>
    </tr>
    <tr>
      <th>Password</th>
      <td><%= f.password_field(:password) %></td>
    </tr>
    <tr>
      <th>Confirm password</th>
      <td><%= f.password_field(:password) %></td>
    </tr>
  </table>

  <div class="form-buttons">
    <%= f.submit("Sign up") %>
  </div>

  <%= link_to("Already have an account?", sign_in_path) %>

<% end %>
